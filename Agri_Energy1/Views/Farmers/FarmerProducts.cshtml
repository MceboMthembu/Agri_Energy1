@model IEnumerable<Agri_Energy1.Models.Products>

@{
    ViewData["Title"] = "Farmer Products";
}

<h2>Farmer Products</h2>
<h3>Currently Viewing @ViewBag.FarmerEmail's Products</h3> <!-- Display farmer's email -->


<form asp-action="FarmerProducts" method="get" class="form-inline">
    <input type="hidden" name="id" value="@ViewBag.FarmerId" />
    <div class="form-group mb-2">
        <label for="category" class="sr-only">Category</label>
        <input type="text" name="category" class="form-control" id="category" placeholder="Category" />
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <label for="startDate" class="sr-only">Start Date</label>
        <input type="date" name="startDate" class="form-control" id="startDate" />
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <label for="endDate" class="sr-only">End Date</label>
        <input type="date" name="endDate" class="form-control" id="endDate" />
    </div>
    <button type="submit" class="btn btn-primary mb-2">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ProductionDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionDate)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
